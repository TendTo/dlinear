"""Install the GNU MPFR library.
"""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

licenses(["notice"])

configure_make(
    name = "mpfr",
    lib_name = "libmpfr",
    autoreconf = True,
    configure_in_place = True,
    autoreconf_options = ["-i"],
    args = ["MAKEINFO=true"],
    lib_source = ":all_srcs",
    visibility = ["//visibility:public"],
    deps = ["@gmp"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:private"],
)
