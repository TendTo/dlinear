load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

configure_make(
    name = "gmp",
    configure_options = ["--with-pic"],
    copts = ["-w"],
    lib_name = "libgmp",
    lib_source = ":all_srcs",
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:private"],
)
