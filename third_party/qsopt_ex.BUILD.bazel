"""Include the qsopt-ex LP solver library in the project."""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")
load("@dlinear//tools:dlinear.bzl", "dlinear_cc_import_foreign")

licenses(["notice"])  # GNU General Public License v3.0

dlinear_cc_import_foreign(
    name = "qsopt_ex",
    deps = [":libqsopt_ex"],
    visibility = ["//visibility:public"],
)

configure_make(
    name = "libqsopt_ex",
    lib_source = ":all_srcs",
    out_static_libs = ["libqsopt_ex.a"],
    out_shared_libs = ["libqsopt_ex.so", "libqsopt_ex.so.2", "libqsopt_ex.so.2.1.0"],
    configure_in_place = True,
    autogen = True,
    autogen_command = "bootstrap",
    configure_options = ["CFLAGS='-Dredacted=\"redacted\" -DEG_LPNUM_MEMSLAB=0'"],
    args = ["-j4"],
    deps = ["@zlib", "@bzip2lib", "@gmp"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)
