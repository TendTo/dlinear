"""Include the qsopt-ex LP solver library in the project."""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

licenses(["notice"])  # GNU General Public License v3.0

configure_make(
    name = "qsopt_ex.a",
    lib_name = "libqsopt_ex",
    out_binaries = ["esolver"],
    out_static_libs = ["libqsopt_ex.a"],
    lib_source = ":all_srcs",
    visibility = ["//visibility:public"],
    configure_in_place = True,
    autoreconf = True,
    autoreconf_options = [
        "--install",
        "--force",
        "--verbose",
        "--warnings=all",
    ],
    configure_options = ["CFLAGS='-Dredacted=\"redacted\"'", "RANLIB=ranlib"],
    args = ["-j4", "CPPFLAGS=-DEG_LPNUM_MEMSLAB=0"],
    deps = ["@zlib", "@bzip2lib", "@gmp"],
)

configure_make(
    name = "qsopt_ex.so",
    lib_name = "libqsopt_ex",
    out_binaries = ["esolver"],
    out_shared_libs = ["libqsopt_ex.so", "libqsopt_ex.so.2", "libqsopt_ex.so.2.1.0"],
    lib_source = ":all_srcs",
    visibility = ["//visibility:public"],
    configure_in_place = True,
    autoreconf = True,
    autoreconf_options = [
        "--install",
        "--force",
        "--verbose",
        "--warnings=all",
    ],
    configure_options = ["CFLAGS='-Dredacted=\"redacted\"'", "RANLIB=ranlib"],
    args = ["-j4", "CPPFLAGS=-DEG_LPNUM_MEMSLAB=0"],
    deps = ["@zlib", "@bzip2lib", "@gmp"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:private"],
)
