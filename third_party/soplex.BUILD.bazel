load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

cmake(
    name = "soplex",
    lib_source = ":all_srcs",
    lib_name = "libsoplex",
    cache_entries = {
        "GMP": "on",
        "OPT": "Release",
        "BOOST": "on",
        "QUADMATH": "on",
    },
    out_static_libs = ["libsoplex.a"],
    out_shared_libs = select(
        {
            "@dlinear//tools:dynamic_build": ["libsoplexshared.so", "libsoplexshared.so.6.0", "libsoplexshared.so.6.0.3.0"],
            "//conditions:default": [],
        },
    ),
    deps = ["@zlib", "@linux_libs//:gmpxx", "@boost//:multiprecision"],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:private"],
)
