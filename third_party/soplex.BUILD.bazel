"""Include the soplex LP solver library in the build."""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

licenses(["notice"])  # Apache 2.0 License

cmake(
    name = "soplex.a",
    lib_source = ":all_srcs",
    lib_name = "libsoplex",
    cache_entries = {
        "GMP": "on",
        "BOOST": "on",
        "CMAKE_BUILD_TYPE": "Release",
    },
    targets = ["soplex", "libsoplex", "libsoplex-pic", "libsoplexshared"],
    out_static_libs = ["libsoplex.a"],
    deps = ["@zlib", "@gmp//:gmpxx", "@boost//:multiprecision", "@mpfr"],
    visibility = ["//visibility:public"],
    defines = ["SOPLEX_WITH_GMP"],
)

cmake(
    name = "soplex.so",
    lib_source = ":all_srcs",
    lib_name = "libsoplex",
    cache_entries = {
        "GMP": "on",
        "BOOST": "on",
        "CMAKE_BUILD_TYPE": "Release",
    },
    targets = ["soplex", "libsoplex", "libsoplex-pic", "libsoplexshared"],
    out_shared_libs = ["libsoplexshared.so", "libsoplexshared.so.6.0", "libsoplexshared.so.6.0.3.0"],
    deps = ["@zlib", "@gmp//:gmpxx", "@boost//:multiprecision", "@mpfr"],
    visibility = ["//visibility:public"],
    defines = ["SOPLEX_WITH_GMP"],
)

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:private"],
)
